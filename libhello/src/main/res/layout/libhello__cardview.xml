<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/libhello__cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp"

    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/libhello__txt_title"
            android:padding="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>



        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:padding="12dp"
            android:background="?android:attr/listDivider"
            android:layout_alignBottom="@+id/libhello__txt_title"
            android:layout_alignParentLeft="true"
            android:id="@+id/libhello__divider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="New Text"
            android:id="@+id/libhello__txt_hello"
            android:layout_below="@+id/libhello__divider"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>